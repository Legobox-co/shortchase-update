<div class="header bg-gradient-primary pb-5 pt-4">
    <div class="container-fluid">
        <div class="header-body">
            <h1 class="text-white text-left">Dashboard</h1>

            @if (Model.LatestAccessLog != null)
            {
                <div class="row">
                    <div class="col-sm-12 col-lg-8 col-md-8 py-3">
                        <div class="card ">
                            <div class="card-body">
                                <p class="mb-0 text-muted text-sm">
                                    <div class="row">
                                        <div class="col-md-9">
