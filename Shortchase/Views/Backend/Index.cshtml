                                            <br />
                                            <strong class="MontserratBold">@DateHelper.DateFormat(Model.LatestAccessLog.RowDate.FromUTCData(Convert.ToInt32(ViewData["TimezoneOffset"].ToString())))</strong>
                                            <br />
                                            <a asp-action="AccessLogs" asp-controller="Backend">View access logs</a>
                                        </div>
                                        <div class="col-md-3">
                                            <img style="height:80px;width:80px;border-radius:100%" src="~/img/blog/@User.Identity.Id().ToString()@{}.jpg" />
<br />

<form method="post" action="Backend/UploadFile" enctype="multipart/form-data" id="frm">

<input type="file" id="file" style="display:none" onchange="$('#frm').submit()" name="file" />

</form>

<a href="javascript:void(0);" onclick="$('#file').click()">Change</a>

</div>

</div>

</p>

</div>

</div>

</div>

</div>
