@model ListingCategoryListDto
@{
    Layout = "_DashboardLayout";
}

<div class="header bg-gradient-primary py-3 ">
    <div class="container-fluid">
        <div class="header-body">
            <div class="row">
                <div class="col-sm-12 col-md-8 col-lg-8">
                    <h1 class="text-white text-left mb-0">
                        @*<i class="fas fa-tags"></i>*@
                        <img src="@Url.Content("~/img/newicons/categories.png")" class="img-fluid" width="40px" />&nbsp;
                        Categories
                    </h1>
                </div>
                <div class="col-sm-12 col-md-4 col-lg-4 text-right">
                    <button class="btn btn-dark-as-homepage AddListingCategoryModalBtn">
                        <i class="fas fa-plus"></i> Add
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="pt-3">
    <div class="container-fluid">
        <div class="card shadow-sm">
            <div class="card-body py-3 px-3">
                @if (Model.ListingCategories == null || Model.ListingCategories.Count() <= 0)
                {
                    <p class="mb-0 text-small font-weight-900">
                        No categories found on database.
                    </p>
                }
                else
                {
                    <div class="row">
                        <div class="col-sm-12 col-md-12 col-lg-12 text-right">
                            <button class="btn btn-dark-as-homepage btn-sm" id="SelectAllRowsBtn" data-power="select" data-totalselected="0" data-totalelements="@Model.ListingCategories.Count">Select All</button>
                            <button class="btn btn-danger btn-sm batchaction" data-actiontype="delete" data-action="@Url.Action("DeleteCategoriesBatch", "Backend")"><i class="fas fa-trash"></i> Delete All</button>
                        </div>
                    </div>
                    <table id="ListingCategoriesList" class="table table-striped table-bordered w-100" cellspacing="0">
                        <thead>
                            <tr>
                                <th class="text-uppercase"></th>
                                <th class="text-uppercase">Name</th>
                                @*<th class="text-uppercase">Description</th>*@
                                <th class="text-uppercase">Category Image</th>
                                <th class="text-uppercase">Marketplace Image</th>
                                <th class="text-uppercase">Status</th>
                                <th class="text-uppercase">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.ListingCategories)
                            {
                                string status = "Active";
                                if (!item.IsEnabled)
                                {
                                    status = "Deactivated";
                                }
                                string displayImageUrl = ImageHelper.ConvertImageToBase64(ViewData["root"].ToString() + item.DisplayImage);
                                string marketplaceImageUrl = ImageHelper.ConvertImageToBase64(ViewData["root"].ToString() + item.MarketplaceImage);
                                <tr>
                                    <td id="SelectWrapper-@item.Id" class="rowSelectors text-center" data-controller="SelectAllRowsBtn" data-selected="false" data-itemid="@item.Id"></td>
                                    <td id="Name-@item.Id" data-value="@item.Name">@item.Name</td>
                                    @*<td id="Description-@item.Id" data-value="@item.Description">@item.Description</td>*@
                                    <td id="DisplayImage-@item.Id" data-value="@displayImageUrl"><img src="@displayImageUrl" style="max-width: 100px;" /> </td>
                                    <td id="MarketplaceImage-@item.Id" data-value="@marketplaceImageUrl"><img src="@marketplaceImageUrl" style="max-width: 100px;" /></td>
                                    <td id="IsEnabled-@item.Id" data-value="@item.IsEnabled">@status</td>
                                    <td>
                                        <button class="btn btn-sm btn-primary EditItemBtn" data-id="@item.Id" data-toggle="tooltip" data-placement="top" title="Edit"><i class="fas fa-edit"></i></button>
                                        @if (!item.IsEnabled)
                                        {
                                            <button class="btn btn-sm btn-success ActivateItemBtn" data-id="@item.Id" data-toggle="tooltip" data-placement="top" title="Activate"><i class="fas fa-power-off"></i></button>
                                        }
                                        else
                                        {
                                            <button class="btn btn-sm btn-warning DeactivateItemBtn" data-id="@item.Id" data-toggle="tooltip" data-placement="top" title="Delete"><i class="fas fa-trash"></i></button>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
            </div>
        </div>

    </div>
</div>


<!-- Add Modal -->
<partial name="Partials/ListingCategory_AddModal" model="@Model" />
<partial name="Partials/ListingCategory_EditModal" model="@Model" />


<input id="SwitchStatusListingCategoryURL" hidden value="@Url.Action("SwitchStatusListingCategory", "Backend")" />

@section Scripts{
    <script src="@Url.Content("~/app/Backend/ListingCategories.js")" asp-append-version="true"></script>
}