@model ICollection<AccessLog>
@{
    Layout = "_DashboardLayout";
}

<div class="header bg-gradient-primary py-3 ">
    <div class="container-fluid">
        <div class="header-body">
            <div class="row">
                <div class="col-sm-12 col-md-12 col-lg-12">
                    <h1 class="text-white text-left mb-0">
                        @*<i class="fas fa-history"></i>*@
                        <img src="@Url.Content("~/img/newicons/access.png")" class="img-fluid" width="40px" />&nbsp; Access Logs
                    </h1>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="pt-3">
    <div class="container-fluid">

        <div class="card shadow-sm">
            <div class="card-body py-3 px-3">
                @if (Model == null || Model.Count() <= 0)
                {
                    <p class="mb-0 text-small font-weight-900">
                        No logs found on database.
                    </p>
                }
                else
                {
                    <table id="AccessLogList" class="table table-striped table-bordered w-100" cellspacing="0">
                        <thead>
                            <tr>
                                <th class="text-uppercase">Date/Time</th>
                                <th class="text-uppercase">IP Address</th>
                                <th class="text-uppercase">Username</th>
                                <th class="text-uppercase">Email</th>
                                <th class="text-uppercase">Logged Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td id="">@DateHelper.DateFormat(item.RowDate.FromUTCData(Convert.ToInt32(ViewData["TimezoneOffset"].ToString())))</td>
                                    <td id="">@item.IP</td>
                                    <td id="">@item.User.FirstName @item.User.LastName</td>
                                    <td id="">@item.User.Email</td>
                                    <td id="">@item.Type</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
            </div>
        </div>

    </div>
</div>


@section Scripts{
    <script src="@Url.Content("~/app/Backend/AccessLogs.js")" asp-append-version="true"></script>
}