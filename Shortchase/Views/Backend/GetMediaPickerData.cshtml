@model ICollection<MediaManagerPickerItemDto>


<div class="row">
    @if (Model == null || Model.Count <= 0)
    {
        <div class="col-sm-12 col-md-12 col-lg-12">
            <p class="m-0">No media found on database.</p>
        </div>
    }
    else
    {
        foreach (var item in Model)
        {
            <div class="col-sm-12 col-md-3 col-lg-2">
                <div class="card" >
                    <img class="card-img-top" src="@item.Media">
                    <div class="card-body p-2">
                        <div class="row">
                            <div class="col-sm-12 col-md-12 col-lg-8">
                                <h5 class="card-title m-0 h-100 d-flex align-items-center justify-content-start">@item.Title</h5>
                            </div>
                            <div class="col-sm-12 col-md-12 col-lg-4 text-right">
                                <button class="btn btn-primary btn-sm SelectMediaPickerOption" data-id="@item.Id" data-title="@item.Title" data-media="@item.Media">Select</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    }
</div>
