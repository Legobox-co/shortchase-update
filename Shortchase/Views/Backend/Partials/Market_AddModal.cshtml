@model MarketListDto
<!-- Add Modal -->
@{Func<dynamic, object> AddModalContent = @<div>
        <form class="row" id="AddMarketModalForm">
            <div class="col-sm-12 col-md-12 col-lg-12">
                <vc:select id="AddCategory" label="Select Category" class="" required="true" searchable="true" default="" options="@Model.CategoriesOptions" selected-value=""></vc:select>
            </div>
            <div class="col-sm-12 col-md-12 col-lg-12">
                <vc:input id="AddName" label="Market" type="text" class="" required="true" placeholder="e.g. Predictions 1X2" value="" disabled="false"></vc:input>
            </div>
            <div class="col-sm-12 col-md-12 col-lg-12 text-right">
                <button type="button" data-dismiss="modal" aria-label="Close" class="btn btn-link text-dark-as-homepage">Cancel</button>
                <button type="submit" class="btn btn-dark-as-homepage">Save</button>
            </div>
        </form>


    </div>;}
<vc:modal content="AddModalContent" id="AddMarketModal" locked="false" title="Add Market"></vc:modal>


<input id="AddMarketModalURL" hidden value="@Url.Action("AddMarket", "Backend")" />