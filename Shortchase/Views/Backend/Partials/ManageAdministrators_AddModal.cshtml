@model BackendUserListDto
<!-- Add Modal -->
@{Func<dynamic, object> AddModalContent = @<div>
        <form class="row" id="AddAdministratorModalForm">
            <div class="col-sm-12 col-md-12 col-lg-6">
                <vc:input id="AddFirstName" label="First Name" type="text" class="" required="true" placeholder="e.g. John" value="" disabled="false"></vc:input>
            </div>
            <div class="col-sm-12 col-md-12 col-lg-6">
                <vc:input id="AddLastName" label="Last Name" type="text" class="" required="true" placeholder="e.g. Doe" value="" disabled="false"></vc:input>
            </div>
            <div class="col-sm-12 col-md-12 col-lg-12">
                <vc:input id="AddEmail" label="Email" type="text" class="" required="true" placeholder="e.g. anotheradmin@shortchase.com" value="" disabled="false"></vc:input>
            </div>
            <div class="col-sm-12 col-md-12 col-lg-4">
                <div class="w-100">
                    <label for="AddCountry" class="mb-0 text-smaller pl-1 font-weight-600 d-block">Phone Country</label>
                    <select class="selectpicker " id="AddCountry" required data-live-search="true">

                        @foreach (var item in Model.CountriesOptions)
                        {
                            if (item.Id == Model.DefaultCountryId)
                            {
                                <option value="@item.Id" id="AddCountryOption-@item.Id" data-code="@item.Code" selected>@item.Name</option>
                            }
                            else
                            {
                                <option value="@item.Id" id="AddCountryOption-@item.Id" data-code="@item.Code">@item.Name</option>
                            }
                        }

                    </select>
                </div>
            </div>
            <div class="col-sm-12 col-md-12 col-lg-3">
                <vc:input id="AddPhoneCode" label="Phone Country Code" type="text" class="" required="false" placeholder="e.g. +1" value="+@Model.DefaultCountryPhoneCode" disabled="true"></vc:input>
            </div>
            <div class="col-sm-12 col-md-12 col-lg-5">
                <vc:input id="AddPhoneNumber" label="Phone Number" type="text" class="" required="true" placeholder="e.g. 5875742143" value="" disabled="false"></vc:input>
            </div>
            <div class="col-sm-12 col-md-12 col-lg-12">
                <div class="w-100">
                    <label for="AddRole" class="mb-0 text-smaller pl-1 font-weight-600 d-block">Role</label>
                    <select class="selectpicker " id="AddRole" required data-live-search="true">

                        @foreach (var item in Model.RolesOptions)
                        {
                            <option value="@item.Name" id="AddRoleOption-@item.Id" data-code="@item.Value" selected>@item.Name</option>
                        }

                    </select>
                </div>
            </div>
            <div class="col-sm-12 col-md-12 col-lg-6">
                <vc:input id="AddPassword" label="Password" type="password" class="" required="true" placeholder="e.g. MyN3wP@SSW0RD" value="" disabled="false"></vc:input>
            </div>
            <div class="col-sm-12 col-md-12 col-lg-6">
                <vc:input id="AddRepeatPassword" label="Repeat the Password" type="password" class="" required="true" placeholder="e.g. MyN3wP@SSW0RD" value="" disabled="false"></vc:input>
            </div>
            <div class="col-sm-12 col-md-12 col-lg-12 text-right pt-3">
                <button type="button" data-dismiss="modal" aria-label="Close" class="btn btn-link text-dark-as-homepage">Cancel</button>
                <button type="submit" class="btn btn-dark-as-homepage">Save</button>
            </div>
        </form>


    </div>;}
<vc:modal content="AddModalContent" id="AddAdministratorModal" locked="false" title="Add Administrator"></vc:modal>


<input id="AddAdministratorModalURL" hidden value="@Url.Action("AddAdministrator", "Backend")" />