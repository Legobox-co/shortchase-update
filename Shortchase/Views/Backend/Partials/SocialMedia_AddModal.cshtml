@model SocialMediaList
<!-- Add Modal -->
@{Func<dynamic, object> AddModalContent = @<div>
        <form class="row" id="AddSocialMediaModalForm">
            <div class="col-sm-12 col-md-12 col-lg-6">
                <vc:input id="AddName" label="Name" type="text" class="" required="true" placeholder="e.g. Facebook" value="" disabled="false"></vc:input>
            </div>
            <div class="col-sm-12 col-md-12 col-lg-4">
                <vc:input id="AddIcon" label="Icon" type="text" class="" required="true" placeholder="e.g. fab fa-facebook-f" value="" disabled="false"></vc:input>
            </div>
            <div class="col-sm-12 col-md-12 col-lg-2">
                <small>Icon Preview</small><br />
                <i class="fab fa-facebook-f fa-2x" id="addIconPreview"></i>
            </div>
            <div class="col-sm-12 col-md-12 col-lg-12">
                <vc:input id="AddLink" label="Link" type="text" class="" required="true" placeholder="e.g. https://www.facebook.com/Shortchasedotcom" value="" disabled="false"></vc:input>
            </div>
            <div class="col-sm-12 col-md-12 col-lg-12 text-right">
                <button type="button" data-dismiss="modal" aria-label="Close" class="btn btn-link text-dark-as-homepage">Cancel</button>
                <button type="submit" class="btn btn-dark-as-homepage">Save</button>
            </div>
        </form>


    </div>;}
<vc:modal content="AddModalContent" id="AddSocialMediaModal" locked="false" title="Add Social Media"></vc:modal>


<input id="AddSocialMediaModalURL" hidden value="@Url.Action("AddSocialMedia", "Backend")" />