@model DiscountsListDto
<!-- Add Modal -->
@{Func<dynamic, object> AddModalContent = @<div>
        <form class="row" id="AddDiscountModalForm">
            <div class="col-sm-12 col-md-12 col-lg-6 pb-3">
                <vc:select id="AddUserId" label="User" class="" required="true" searchable="true" default="" options="@Model.UsersOptions" selected-value=""></vc:select>
            </div>
            <div class="col-sm-12 col-md-12 col-lg-6 pb-3">
                <vc:select id="AddEquivalentAmount" label="Amount" class="" required="true" searchable="false" default="" options="@Model.RewardsOptions" selected-value=""></vc:select>
            </div>
            <div class="col-sm-12 col-md-12 col-lg-12 text-right">
                <button type="button" data-dismiss="modal" aria-label="Close" class="btn btn-link text-dark-as-homepage">Cancel</button>
                <button type="submit" class="btn btn-dark-as-homepage">Save</button>
            </div>
        </form>


    </div>;}
<vc:modal content="AddModalContent" id="AddDiscountModal" locked="false" title="Add Discount"></vc:modal>


<input id="AddDiscountModalURL" hidden value="@Url.Action("AddDiscount", "Backend")" />