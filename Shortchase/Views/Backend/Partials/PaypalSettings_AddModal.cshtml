@model PaypalSettingsListDto
<!-- Add Modal -->
@{Func<dynamic, object> AddModalContent = @<div>
        <form class="row" id="AddPaypalSettingsModalForm">
            <div class="col-sm-12 col-md-12 col-lg-12">
                <vc:input id="AddName" label="Name" type="text" class="" required="true" placeholder="" value="" disabled="false"></vc:input>
            </div>
            <div class="col-sm-12 col-md-12 col-lg-12">
                <vc:input id="AddClientID" label="Client ID" type="text" class="" required="true" placeholder="" value="" disabled="false"></vc:input>
            </div>
            <div class="col-sm-12 col-md-12 col-lg-12">
                <vc:input id="AddSecret" label="Secret" type="text" class="" required="true" placeholder="" value="" disabled="false"></vc:input>
            </div>
            <div class="col-sm-12 col-md-12 col-lg-12">
                <vc:checkbox id="AddIsDefault" label="Is Default?" class="" required="false" checked="false"></vc:checkbox>
                <p><small class="text-muted">(Default settings are the settings that are going to be used throughout Shortchase app.)</small></p>
            </div>
            <div class="col-sm-12 col-md-12 col-lg-12 text-right">
                <button type="button" data-dismiss="modal" aria-label="Close" class="btn btn-link text-dark-as-homepage">Cancel</button>
                <button type="submit" class="btn btn-dark-as-homepage">Save</button>
            </div>
        </form>


    </div>;}
<vc:modal content="AddModalContent" id="AddPaypalSettingsModal" locked="false" title="Add Paypal Settings"></vc:modal>


<input id="AddPaypalSettingsModalURL" hidden value="@Url.Action("AddPaypalSettings", "Backend")" />