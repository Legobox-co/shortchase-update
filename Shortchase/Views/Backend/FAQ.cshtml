@model FAQListDto
@{
    Layout = "_DashboardLayout";
}

<div class="header bg-gradient-primary py-3 ">
    <div class="container-fluid">
        <div class="header-body">
            <div class="row">
                <div class="col-sm-12 col-md-8 col-lg-8">
                    <h1 class="text-white text-left mb-0">
                        @*<i class="fas fa-question-circle"></i>*@
                        <img src="@Url.Content("~/img/newicons/faq.png")" class="img-fluid" width="40px" />&nbsp;
                        FAQ
                    </h1>
                </div>
                <div class="col-sm-12 col-md-4 col-lg-4 text-right">
                    <button class="btn btn-dark-as-homepage AddFAQModalBtn">
                        <i class="fas fa-plus"></i> Add
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="pt-3">
    <div class="container-fluid">
        <div class="card shadow-sm">
            <div class="card-body py-3 px-3">
                @if (Model.Items == null || Model.Items.Count() <= 0)
                {
                    <p class="mb-0 text-small font-weight-900">
                        No FAQ found on database.
                    </p>
                }
                else
                {
                    <table id="FAQList" class="table table-striped table-bordered w-100" cellspacing="0">
                        <thead>
                            <tr>
                                <th class="text-uppercase bigdesktop meddesktop smalldesktop medium tabletl btwtabllandp tabletp mobilel">Type</th>
                                <th class="text-uppercase bigdesktop meddesktop smalldesktop medium tabletl btwtabllandp tabletp mobilel">Question</th>
                                @*<th class="text-uppercase bigdesktop meddesktop smalldesktop medium ">Answer</th>*@
                                <th class="text-uppercase bigdesktop meddesktop smalldesktop medium ">Status</th>
                                <th class="text-uppercase bigdesktop meddesktop smalldesktop medium tabletl btwtabllandp tabletp mobilel">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Items)
                            {
                                string status = "Active";
                                if (!item.IsActive)
                                {
                                    status = "Deactivated";
                                }
                                <tr>
                                    <td id="Type-@item.Id" data-value="@item.Type">
                                        @item.Type
                                        <input type="hidden" id="Answer-@item.Id" data-value="@item.Answer" />
                                    </td>
                                    <td id="Question-@item.Id" data-value="@item.Question">@item.Question</td>
                                    @*<td id="Answer-@item.Id" data-value="@item.Answer" class="text-smaller word-break-all-inside-too">@Html.Raw(item.Answer)</td>*@
                                    <td id="IsActive-@item.Id" data-value="@item.IsActive">@status</td>
                                    <td>
                                        <button class="btn btn-sm btn-primary EditItemBtn" data-id="@item.Id" data-toggle="tooltip" data-placement="top" title="Edit"><i class="fas fa-edit"></i></button>
                                        @if (!item.IsActive)
                                        {
                                            <button class="btn btn-sm btn-success ActivateItemBtn" data-id="@item.Id" data-toggle="tooltip" data-placement="top" title="Activate"><i class="fas fa-power-off"></i></button>
                                        }
                                        else
                                        {
                                            <button class="btn btn-sm btn-danger DeactivateItemBtn" data-id="@item.Id" data-toggle="tooltip" data-placement="top" title="Delete"><i class="fas fa-trash"></i></button>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
            </div>
        </div>

    </div>
</div>


<!-- Add Modal -->
<partial name="Partials/FAQ_AddModal" model="@Model" />
<partial name="Partials/FAQ_EditModal" model="@Model" />
<partial name="Partials/FAQ_ViewAnswer" />


<input id="SwitchStatusFAQItemURL" hidden value="@Url.Action("SwitchStatusFAQItem", "Backend")" />

@section Scripts{
    <script src="@Url.Content("~/app/Backend/FAQ.js")" asp-append-version="true"></script>
}