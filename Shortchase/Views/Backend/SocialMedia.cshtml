@model SocialMediaList
@{
    Layout = "_DashboardLayout";
}

<div class="header bg-gradient-primary py-3 ">
    <div class="container-fluid">
        <div class="header-body">
            <div class="row">
                <div class="col-sm-12 col-md-8 col-lg-8">
                    <h1 class="text-white text-left mb-0">
                        @*<i class="fas fa-link"></i>*@
                        <img src="@Url.Content("~/img/newicons/social-media.png")" class="img-fluid" width="40px" />&nbsp;
                        Social Media
                    </h1>
                </div>
                <div class="col-sm-12 col-md-4 col-lg-4 text-right">
                    <button class="btn btn-dark-as-homepage AddSocialMediaModalBtn">
                        <i class="fas fa-plus"></i> Add
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="pt-3">
    <div class="container-fluid">
        <div class="card shadow-sm">
            <div class="card-body py-3 px-3">
                @if (Model.Medias == null || Model.Medias.Count() <= 0)
                {
                    <p class="mb-0 text-small font-weight-900">
                        No social media found on database.
                    </p>
                }
                else
                {
                    <div class="row">
                        <div class="col-sm-12 col-md-12 col-lg-12 text-right">
                            <button class="btn btn-dark-as-homepage btn-sm" id="SelectAllRowsBtn" data-power="select" data-totalselected="0" data-totalelements="@Model.Medias.Count">Select All</button>
                            <button class="btn btn-success btn-sm" id="ActivateAllSelectedBtn"><i class="fas fa-power-off"></i> Activate All</button>
                            <button class="btn btn-warning btn-sm" id="DeactivateAllSelectedBtn"><i class="fas fa-ban"></i> Deactivate All</button>
                        </div>
                    </div>
                    <table id="SocialMediaList" class="table table-striped table-bordered w-100" cellspacing="0">
                        <thead>
                            <tr>
                                <th class="text-uppercase"></th>
                                <th class="text-uppercase">Media</th>
                                <th class="text-uppercase">Icon</th>
                                <th class="text-uppercase">Link</th>
                                <th class="text-uppercase">Status</th>
                                <th class="text-uppercase">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Medias)
                            {
                                string status = "Active";
                                if (!item.IsEnabled)
                                {
                                    status = "Deactivated";
                                }
                                <tr>
                                    <td id="SelectWrapper-@item.Id" class="rowSelectors text-center" data-controller="SelectAllRowsBtn" data-selected="false" data-itemid="@item.Id"></td>
                                    <td id="Name-@item.Id" data-value="@item.Name">@item.Name</td>
                                    <td id="Icon-@item.Id" data-value="@item.Icon"><i class="@item.Icon"></i></td>
                                    <td id="Link-@item.Id" data-value="@item.Link"><a href="@item.Link" target="_blank">@item.Link</a></td>
                                    <td id="IsEnabled-@item.Id" data-value="@item.IsEnabled">@status</td>
                                    <td>
                                        <button class="btn btn-sm btn-primary EditItemBtn" data-id="@item.Id" data-toggle="tooltip" data-placement="top" title="Edit"><i class="fas fa-edit"></i></button>
                                        @if (!item.IsEnabled)
                                        {
                                            <button class="btn btn-sm btn-success ActivateItemBtn" data-id="@item.Id" data-toggle="tooltip" data-placement="top" title="Activate"><i class="fas fa-power-off"></i></button>
                                        }
                                        else
                                        {
                                            <button class="btn btn-sm btn-warning DeactivateItemBtn" data-id="@item.Id" data-toggle="tooltip" data-placement="top" title="Deactivate"><i class="fas fa-ban"></i></button>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
            </div>
        </div>

    </div>
</div>


<!-- Add Modal -->
<partial name="Partials/SocialMedia_AddModal" model="@Model" />
<partial name="Partials/SocialMedia_EditModal" model="@Model" />


<input id="SwitchStatusSocialMediaURL" hidden value="@Url.Action("SwitchStatusSocialMedia", "Backend")" />

@section Scripts{
    <script src="@Url.Content("~/app/Backend/SocialMedia.js")" asp-append-version="true"></script>
}