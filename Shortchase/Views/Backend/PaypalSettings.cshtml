@model PaypalSettingsListDto
@{
    Layout = "_DashboardLayout";
}

<div class="header bg-gradient-primary py-3 ">
    <div class="container-fluid">
        <div class="header-body">
            <div class="row">
                <div class="col-sm-12 col-md-8 col-lg-8">
                    <h1 class="text-white text-left mb-0">
                        @*<i class="fas fa-cogs"></i>*@

                        <img src="@Url.Content("~/img/newicons/paypal-settings.png")" class="img-fluid" width="40px" />&nbsp;
                        Paypal Account Settings
                    </h1>
                </div>
                <div class="col-sm-12 col-md-4 col-lg-4 text-right">
                    <button class="btn btn-dark-as-homepage AddPaypalSettingsModalBtn">
                        <i class="fas fa-plus"></i> Add
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="pt-3">
    <div class="container-fluid">
        <div class="card shadow-sm">
            <div class="card-body py-3 px-3">
                @if (Model.Settings == null || Model.Settings.Count() <= 0)
                {
                    <p class="mb-0 text-small font-weight-900">
                        No settings found on database.
                    </p>
                }
                else
                {
                    <table id="PaypalSettingssList" class="table table-striped table-bordered w-100" cellspacing="0">
                        <thead>
                            <tr>
                                <th class="text-uppercase">Name</th>
                                <th class="text-uppercase">Client ID</th>
                                <th class="text-uppercase">Secret</th>
                                <th class="text-uppercase">Status</th>
                                <th class="text-uppercase">Is Default?</th>
                                <th class="text-uppercase">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Settings)
                            {
                                <tr>
                                    <td id="Name-@item.Id" data-value="@item.Name">@item.Name</td>
                                    <td id="ClientID-@item.Id" data-value="@item.ClientID">@item.ClientID</td>
                                    <td id="Secret-@item.Id" data-value="@item.Secret">@item.Secret</td>
                                    <td id="Status-@item.Id" data-value="@item.IsActive.ToString().ToLower()">
                                        @if (item.IsActive)
                                        {
                                            <text>Enabled</text>
                                        }
                                        else
                                        {
                                            <text>Disabled</text>
                                        }
                                    </td>
                                    <td id="Default-@item.Id" data-value="@item.IsDefault.ToString().ToLower()">
                                        @if (item.IsDefault)
                                        {
                                            <text>Yes</text>
                                        }
                                        else
                                        {
                                            <text>No</text>
                                        }
                                    </td>
                                    <td>
                                        <button class="btn btn-sm btn-primary EditItemBtn" data-id="@item.Id" data-toggle="tooltip" data-placement="top" title="Edit"><i class="fas fa-edit"></i></button>
                                        @if (!item.IsActive)
                                        {
                                            <button class="btn btn-sm btn-success ActivateItemBtn" data-id="@item.Id" data-toggle="tooltip" data-placement="top" title="Activate"><i class="fas fa-power-off"></i></button>
                                        }
                                        else
                                        {
                                            <button class="btn btn-sm btn-warning DeactivateItemBtn" data-id="@item.Id" data-toggle="tooltip" data-placement="top" title="Deactivate"><i class="fas fa-ban"></i></button>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
            </div>
        </div>

    </div>
</div>


<!-- Add Modal -->
<partial name="Partials/PaypalSettings_AddModal" model="@Model" />
<partial name="Partials/PaypalSettings_EditModal" model="@Model" />


<input id="SwitchStatusPaypalSettingsURL" hidden value="@Url.Action("SwitchStatusPaypalSettings", "Backend")" />

@section Scripts{
    <script src="@Url.Content("~/app/Backend/PaypalSettings.js")" asp-append-version="true"></script>
}