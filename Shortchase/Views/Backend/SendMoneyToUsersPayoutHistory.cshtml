@model UserPayoutList
@{
    Layout = "_DashboardLayout";
}

<div class="header bg-gradient-primary py-3 ">
    <div class="container-fluid">
        <div class="header-body">
            <div class="row">
                <div class="col-sm-12 col-md-12 col-lg-12">
                    <h1 class="text-white text-left mb-0">

                        @*<i class="fas fa-hand-holding-usd"></i>*@
                        <img src="@Url.Content("~/img/newicons/send-money.png")" class="img-fluid" width="40px" />&nbsp;
                        User Payout History: @Model.UserName
                    </h1>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="pt-3">
    <div class="container-fluid">
        <div class="py-2">
            <a asp-action="SendMoneyToUsers" asp-controller="Backend" class="btn btn-link timezoneoffset"><img src="@Url.Content("~/img/newicons/back.png")" class="img-fluid" width="30px" /></a>
        </div>
        <div class="card shadow-sm">
            <div class="card-body py-3 px-3">
                @if (Model.Payouts == null || Model.Payouts.Count() <= 0)
                {
                    <p class="mb-0 text-small font-weight-900">
                        No payouts found on database for this user.
                    </p>
                }
                else
                {
                    <table id="UserPayoutsList" class="table table-striped table-bordered w-100" cellspacing="0">
                        <thead>
                            <tr>
                                <th class="text-uppercase">Paypal Batch Payout ID</th>
                                <th class="text-uppercase">Value</th>
                                <th class="text-uppercase">Paypal Fees</th>
                                <th class="text-uppercase">Status</th>
                                <th class="text-uppercase">Date Created</th>
                                <th class="text-uppercase">Confirmed?</th>
                                <th class="text-uppercase">Cancelled?</th>
                                <th class="text-uppercase">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Payouts)
                            {
                            <tr>
                                <td>@item.PayoutBatchId</td>
                                <td>$ @item.Value.ToString("0.00")</td>
                                <td>$ @item.Fees.ToString("0.00")</td>
                                <td>@item.PayoutBatchStatus</td>
                                <td>@DateHelper.DateFormat(item.RowDate.FromUTCData(Convert.ToInt32(ViewData["TimezoneOffset"].ToString())))</td>
                                <td>
                                    @if (item.PayoutBatchCompletedDate.HasValue)
                                    {
                                        <text>Yes <br />@DateHelper.DateFormat(item.PayoutBatchCompletedDate.Value.FromUTCData(Convert.ToInt32(ViewData["TimezoneOffset"].ToString())))</text>
                                    }
                                </td>
                                <td>
                                    @if (item.PayoutBatchCancelledDate.HasValue)
                                    {
                                        <text>Yes <br />@DateHelper.DateFormat(item.PayoutBatchCancelledDate.Value.FromUTCData(Convert.ToInt32(ViewData["TimezoneOffset"].ToString())))</text>
                                    }
                                </td>
                                <td>
                                    @if (item.PayoutBatchStatus != PaypalPayoutStatus.COMPLETED)
                                    {
                                        <button class="btn btn-sm btn-primary CheckAgainItemBtn" data-id="@item.Id.ToString()" data-link="@item.PayoutBatchCheckLink" data-toggle="tooltip" data-placement="top" title="Check on Paypal"><i class="fas fa-sync"></i></button>

                                    }
                                </td>
                            </tr>
                            }
                        </tbody>
                    </table>
                }
            </div>
        </div>

    </div>
</div>



<input id="CheckIndividualPaypalPayoutURL" hidden value="@Url.Action("CheckIndividualPaypalPayout", "Backend")" />

@section Scripts{
    <script src="@Url.Content("~/app/Backend/SendMoneyToUsersPayoutHistory.js")" asp-append-version="true"></script>
}