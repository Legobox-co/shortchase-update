@model DiscountsListDto
@{
    Layout = "_DashboardLayout";
}

<div class="header bg-gradient-primary py-3 ">
    <div class="container-fluid">
        <div class="header-body">
            <div class="row">
                <div class="col-sm-12 col-md-8 col-lg-8">
                    <h1 class="text-white text-left mb-0">
                        @*<i class="fas fa-percentage"></i>*@
                        <img src="@Url.Content("~/img/newicons/discount.png")" class="img-fluid" width="40px" />&nbsp;
                        Discounts
                    </h1>
                </div>
                <div class="col-sm-12 col-md-4 col-lg-4 text-right">
                    <button class="btn btn-dark-as-homepage AddDiscountModalBtn">
                        <i class="fas fa-plus"></i> Add
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="pt-3">
    <div class="container-fluid">
        <div class="card shadow-sm">
            <div class="card-body py-3 px-3">
                @if (Model.Discounts == null || Model.Discounts.Count() <= 0)
                {
                    <p class="mb-0 text-small font-weight-900">
                        No discounts found on database.
                    </p>
                }
                else
                {
                    <table id="DiscountsList" class="table table-striped table-bordered w-100" cellspacing="0">
                        <thead>
                            <tr>
                                <th class="text-uppercase">Date</th>
                                <th class="text-uppercase">User</th>
                                <th class="text-uppercase">Type</th>
                                <th class="text-uppercase">Amount</th>
                                <th class="text-uppercase">Points Claimed</th>
                                <th class="text-uppercase">Coupon</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Discounts)
                            {

                                <tr>
                                    <td id="RowDate-@item.Id" data-value="@item.RowDate" data-order="@item.RowDate">@DateHelper.DateFormat(item.RowDate.FromUTCData(Convert.ToInt32(ViewData["TimezoneOffset"].ToString())))</td>
                                    <td id="UserId-@item.Id" data-value="@item.UserId">
                                        @item.User.FirstName @item.User.LastName <br />
                                        <span class="text-muted">@item.User.Email.ToLower()</span>
                                    </td>
                                    <td id="Type-@item.Id" data-value="@item.Type">@item.Type</td>
                                    <td id="EquivalentAmount-@item.Id" data-value="@item.EquivalentAmount">$ @item.EquivalentAmount</td>
                                    <td id="PointsClaimed-@item.Id" data-value="@item.PointsClaimed">
                                        @if (item.PointsClaimed == 0)
                                        {
                                            <text>No points claimed.</text>
                                        }
                                        else
                                        {
                                            <text>@item.PointsClaimed</text>
                                        }
                                    </td>
                                    <td id="CouponCode-@item.Id" data-value="@item.CouponCode">@item.CouponCode</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
            </div>
        </div>

    </div>
</div>


<!-- Add Modal -->
<partial name="Partials/Discounts_AddModal" model="@Model" />
@* <partial name="Partials/Discounts_EditModal" model="@Model" />*@


<input id="SwitchStatusPickURL" hidden value="@Url.Action("SwitchStatusPick", "Backend")" />

@section Scripts{
    <script src="@Url.Content("~/app/Backend/Discounts.js")" asp-append-version="true"></script>
}