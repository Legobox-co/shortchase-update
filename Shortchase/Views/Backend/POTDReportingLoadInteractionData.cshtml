@model ICollection<POTDListingLiveReportingInteraction>

@if (Model == null || Model.Count <= 0)
{
    <p class="mb-0 text-small font-weight-900">
        No interactions found on database for this POTD.
    </p>
}
else
{
    <table id="POTDDynamicInteractionsTable" class="table table-striped table-bordered w-100 table-responsive" cellspacing="0" width="100%">
        <thead>
            <tr>
                <th class="text-uppercase">Date</th>
                <th class="text-uppercase">User</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
               

                <tr>

                    <td  >@DateHelper.DateFormat(item.RowDate.FromUTCData(Convert.ToInt32(ViewData["TimezoneOffset"].ToString())))</td>
                    <td >
                        @item.InteractedBy.FirstName @item.InteractedBy.LastName
                        <br /> <span class="text-muted text-lowercase">@item.InteractedBy.Email</span>
                    </td>

                </tr>
            }
        </tbody>
    </table>
}

