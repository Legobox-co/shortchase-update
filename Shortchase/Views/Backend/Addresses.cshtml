@model AddressListDto
@{
    Layout = "_DashboardLayout";
}

<div class="header bg-gradient-primary py-3 ">
    <div class="container-fluid">
        <div class="header-body">
            <div class="row">
                <div class="col-sm-12 col-md-8 col-lg-8">
                    <h1 class="text-white text-left mb-0">
                        @*<i class="fas fa-map-marker-alt"></i>*@
                        <img src="@Url.Content("~/img/newicons/addresses.png")" class="img-fluid" width="40px" />&nbsp;
                        Addresses
                    </h1>
                </div>
                <div class="col-sm-12 col-md-4 col-lg-4 text-right">
                    <button class="btn btn-dark-as-homepage AddAddressModalBtn">
                        <i class="fas fa-plus"></i> Add
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="pt-3">
    <div class="container-fluid">
        <div>
            <p class="font-weight-600 m-0 py-4">
                <label class="custom-toggle mb--1">
                    <input type="checkbox" id="DisplayOnSite" @if (Model.DisplayAddresses) { <text> checked </text> }>
                    <span class="custom-toggle-slider rounded-circle"></span>
                </label>
                Display active addresses on the website footer<br />

                <button class="btn btn-sm btn-primary" id="ChangeDisplaySettings">Save Settings</button>
            </p>
        </div>
        <div class="card shadow-sm">
            <div class="card-body py-3 px-3">
                @if (Model.Addresses == null || Model.Addresses.Count() <= 0)
                {
                    <p class="mb-0 text-small font-weight-900">
                        No addresses found on database.
                    </p>
                }
                else
                {
                    <table id="AddressesList" class="table table-striped table-bordered w-100" cellspacing="0">
                        <thead>
                            <tr>
                                <th class="text-uppercase">Location</th>
                                <th class="text-uppercase">Address</th>
                                <th class="text-uppercase">Zip Code</th>
                                <th class="text-uppercase">City</th>
                                <th class="text-uppercase">State/Province</th>
                                <th class="text-uppercase">Country</th>
                                <th class="text-uppercase">Status</th>
                                <th class="text-uppercase">Primary</th>
                                <th class="text-uppercase">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Addresses)
                            {
                                string status = "Active";
                                if (!item.IsEnabled)
                                {
                                    status = "Deactivated";
                                }
                                string primary = "";
                                if (item.IsPrimary)
                                {
                                    primary = "Yes";
                                }
                                <tr>
                                    <td id="LocationTitle-@item.Id" data-value="@item.Location">@item.Location</td>
                                    <td id="StreetAddress-@item.Id" data-value="@item.StreetAddress">@item.StreetAddress</td>
                                    <td id="ZipCode-@item.Id" data-value="@item.ZipCode">@item.ZipCode</td>
                                    <td id="City-@item.Id" data-value="@item.City">@item.City</td>
                                    <td id="Province-@item.Id" data-value="@item.Province">@item.Province</td>
                                    <td id="Country-@item.Id" data-value="@item.Country.Id">@item.Country.Name</td>
                                    <td id="IsEnabled-@item.Id" data-value="@item.IsEnabled">@status</td>
                                    <td id="IsPrimary-@item.Id" data-value="@item.IsPrimary.ToString().ToLower()">@primary</td>
                                    <td>
                                        <button class="btn btn-sm btn-primary EditItemBtn" data-id="@item.Id" data-toggle="tooltip" data-placement="top" title="Edit"><i class="fas fa-edit"></i></button>
                                        @if (!item.IsEnabled)
                                        {
                                            <button class="btn btn-sm btn-success ActivateItemBtn" data-id="@item.Id" data-toggle="tooltip" data-placement="top" title="Activate"><i class="fas fa-power-off"></i></button>
                                        }
                                        else
                                        {
                                            <button class="btn btn-sm btn-warning DeactivateItemBtn" data-id="@item.Id" data-toggle="tooltip" data-placement="top" title="Deactivate"><i class="fas fa-ban"></i></button>
                                        }
                                        @if (!item.IsPrimary)
                                        {
                                            <button class="btn btn-sm btn-info MakeItPrimaryBtn" data-id="@item.Id" data-toggle="tooltip" data-placement="top" title="Make it Primary"><i class="fas fa-star"></i></button>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
            </div>
        </div>

    </div>
</div>


<!-- Add Modal -->
<partial name="Partials/Address_AddModal" model="@Model" />
<partial name="Partials/Address_EditModal" model="@Model" />


<input id="SwitchStatusAddressURL" hidden value="@Url.Action("SwitchStatusAddress", "Backend")" />
<input id="SwitchPrimaryAddressURL" hidden value="@Url.Action("SwitchPrimaryAddress", "Backend")" />
<input id="SwitchDisplayAddressFlagURL" hidden value="@Url.Action("SwitchDisplayAddressFlag", "Backend")" />

@section Scripts{
    <script src="@Url.Content("~/app/Backend/Addresses.js")" asp-append-version="true"></script>
}