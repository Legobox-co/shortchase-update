@model ViewPOTDWebsite;
@{
    Layout = "_WebsiteLayoutWithoutJumbotron";

    string imageURL = ImageHelper.ConvertImageToBase64(ViewData["root"].ToString() + Model.POTD.Category.MarketplaceImage);
}
<div class="text-center headerJumbotron headerJumbotron4">
    <div class="container">
        <div class="row pb-5">
            <div class="col-sm-12 ">
                <h1 class=" mt-5 dark-text-shortchase text-shadow-big huge-title">
                    Prediction Feed
                </h1>
            </div>
        </div>
    </div>
</div>

<section class="bg-grey-dark-3">
    <div class="container extended-container">
        <div class="card shadow-sm">
            <div class="card-body py-5 text-center">
                <h2 class="MontserratBold text-dark m-0 py-2 text-underlined">
                    @Model.POTD.Title
                </h2>
                <p class="text-grey-solid text-small m-0 pt-1 pb-2">
                    Posted on @DateHelper.DateFormat(Model.POTD.Pick.StartTime.FromUTCData(Convert.ToInt32(ViewData["TimezoneOffset"].ToString())))
                </p>
                <p class="text-grey-solid MontserratBold px-3 py-3 m-0">
                    @Model.POTD.Pick.Team1 vs @Model.POTD.Pick.Team2
                </p>
                <h5 class=" text-grey-solid m-0 py-3 pb-4">
                    @Model.POTD.Venue
                </h5>
                <p class="text-grey-solid text-small px-3 py-3 m-0">
                    @Model.POTD.Description
                </p>

                @if (Model.NextPOTD != null)
                {
                    <p class="text-grey-solid text-small py-5">
                        Next:
                        <a class="btn btn-light btn-rounded-corners timezoneoffset" asp-action="ViewPOTD" asp-controller="Home" asp-route-Id="@Model.NextPOTD.Id">
                            @Model.NextPOTD.Title
                        </a>
                    </p>
                }


