                <h4 class="MontserratMedium text-dark m-0 py-2">
                    Live Reporting
                </h4>
                <div class="row">
                    <div class="col-sm-12 col-md-1 col-lg-2"></div>
                    <div class="col-sm-12 col-md-10 col-lg-8">
                        <div class="liveReportingBox shadow-sm">
                            @if (Model.LiveReportings != null && Model.LiveReportings.Count > 0)
                            {
                                <div class="container">
                                    @foreach (var item in Model.LiveReportings)
                                    {
                                        <div class="row py-2">
                                            <div class="col-sm-12 col-md-12 col-lg-6 text-left">
                                                <p class="m-0 text-smaller font-weight-bolder pt-2">@item.ReportedBy.FirstName @item.ReportedBy.LastName</p>
                                            </div>
                                            <div class="col-sm-12 col-md-12 col-lg-6 text-right">
                                                <p class="m-0 text-smaller font-weight-bolder pt-2">@DateHelper.DateFormat(item.DateTimeReported.FromUTCData(Convert.ToInt32(ViewData["TimezoneOffset"].ToString())))</p>
                                            </div>
                                            <div class="col-sm-12 col-md-12 col-lg-12 text-left ">
                                                <div class="bg-white p-1 m-0">
                                                    @Html.Raw(item.Report)
                                                </div>
                                            </div>
                                            <div class="col-sm-12 col-md-12 col-lg-12 text-left">
                                                @{
                                                    string likeClass = "";
                                                    string dislikeClass = "";
                                                    string userId = User.Identity.Id();
                                                    if (item.UserInteractions.Any(i => i.InteractionType == UserInteractionType.Like && i.InteractedById.ToString() == userId))
                                                    {
                                                        likeClass = "text-info";
                                                    }
                                                    if (item.UserInteractions.Any(i => i.InteractionType == UserInteractionType.Dislike && i.InteractedById.ToString() == userId))
                                                    {
                                                        dislikeClass = "text-info";
                                                    }

                                                }
                                                <button class="btn btn-sm UserInteractionBtn @likeClass" data-report="@item.Id" data-user="@userId" data-interaction="@UserInteractionType.Like"><i class="fas fa-thumbs-up"></i> @item.UserInteractions.Count(i => i.InteractionType == UserInteractionType.Like)</button>
                                                <button class="btn btn-sm UserInteractionBtn @dislikeClass" data-report="@item.Id" data-user="@userId" data-interaction="@UserInteractionType.Dislike"><i class="fas fa-thumbs-down"></i> @item.UserInteractions.Count(i => i.InteractionType == UserInteractionType.Dislike)</button>
                                            </div>
                                        </div>
                                    }
                                </div>
                            }
                        </div>
