                </div>*@
                    </div>
                    <div class="col-sm-12 col-md-1 col-lg-2"></div>
                </div>
                <div class="text-center py-3">
                    @{
                        string urlToShare = "https://www.shortchase.com/ViewPOTD/" + Model.POTD.Id.ToString() + "?TimeOffset=" + ViewData["TimezoneOffset"].ToString();
                        string facebookShareURL = "https://www.facebook.com/sharer/sharer.php?u=" + urlToShare;
                        string twiterShareURL = "https://twitter.com/share?url=" + urlToShare;
                    }
                    <a target="_blank" href="@twiterShareURL" class="btn btn-dark btn-social-link btn-twitter text-white ">
                        <i class="fab fa-twitter"></i>
                    </a>
                    <a target="_blank" href="@facebookShareURL" class="btn btn-dark btn-social-link btn-facebook text-white ">
                        <i class="fab fa-facebook-f"></i>
                    </a>
                </div>

            </div>
        </div>

    </div>
