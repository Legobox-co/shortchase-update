        {
            <div class="text-center py-3">
                <h5 class="MontserratBold">My Prediction</h5>
                <p class="m-0 py-2">@Model.UserPrediction.Prediction</p>
                <p class="text-muted text-smaller">@DateHelper.DateFormat(Model.UserPrediction.DatePredicted.FromUTCData(Convert.ToInt32(ViewData["TimezoneOffset"].ToString())))</p>
