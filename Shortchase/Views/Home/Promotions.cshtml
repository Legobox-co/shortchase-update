@model PromotionPost;
@{
    Layout = "_WebsiteLayoutWithoutJumbotron";
    string bgImagePath = ViewData["root"].ToString() + Model.FeaturedImage;
    string imageUrl = "";
    string hasImageClass = "";
    if (Model.FeaturedImage == "/img/blog/default.jpg")
    {
        hasImageClass = "nooverlay";
        imageUrl = Url.Content(Model.FeaturedImage);
    }
    else
    {
        hasImageClass = "overlay";
        imageUrl = ImageHelper.ConvertImageToBase64(bgImagePath);
    }
}




<section class="bg-grey-dark-3">
    <div class="container">
        <p class="text-muted text-smaller">
            Shortchase / <a asp-action="PromotionsList" asp-controller="Home" class="timezoneoffset text-muted">Promotions</a>
        </p>
        <div class="card bg-grey-dark-3 shadow">
            <div class="card-body py-1">
                <div class="row">
                    <div class="col-sm-12 col-md-12 py-3 text-center bg-white min-height-500" style="background: url('@imageUrl') no-repeat center; background-size:cover; ">
                    </div>
                    <div class="col-sm-12 col-md-12 col-lg-12 d-block d-sm-block d-md-block d-lg-none">
                        <div class="row">
                            <div class="col-sm-12 col-md-12 py-3 text-center">
                                <h1 class="MontserratBold">@Model.Title</h1>
                            </div>
                            <div class="col-sm-12 col-md-12 py-3 text-left">
                                @Html.Raw(Model.Content)
                            </div>
                            <div class="col-sm-12 col-md-12 py-3 text-left">
                                <p class="m-0 py-2 text-muted text-smaller text-uppercase text-center w-100 MontserratMedium">LAST UPDATED ON: @DateHelper.DateFormat(Model.DatePublished.Value.FromUTCData(Convert.ToInt32(ViewData["TimezoneOffset"].ToString())))</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-12 col-md-12 col-lg-12 d-none d-sm-none d-md-none d-lg-block">
                        <div class="row">
                            <div class="col-sm-12 col-md-12  col-lg-2"></div>
                            <div class="col-sm-12 col-md-12  col-lg-8">
                                <div class="row">
                                    <div class="col-sm-12 col-md-12 py-3 text-center">
                                        <h1 class="MontserratBold">@Model.Title</h1>
                                    </div>
                                    <div class="col-sm-12 col-md-12 py-3 text-left">
                                        @Html.Raw(Model.Content)
                                    </div>
                                    <div class="col-sm-12 col-md-12 py-3 text-left">
                                        <p class="m-0 py-2 text-muted text-smaller text-uppercase text-center w-100 MontserratMedium">LAST UPDATED ON: @DateHelper.DateFormat(Model.DatePublished.Value.FromUTCData(Convert.ToInt32(ViewData["TimezoneOffset"].ToString())))</p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-sm-12 col-md-12  col-lg-2"></div>

                        </div>
                    </div>

                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-12 col-md-12 py-2 text-left">
                <a class="timezoneoffset" asp-action="PromotionsList" asp-controller="Home"><img class="img-fluid" src="@Url.Content("~/img/newicons/back.png")" width="30px" /></a>
            </div>
        </div>

    </div>
</section>