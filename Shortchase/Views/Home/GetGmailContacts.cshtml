@model ICollection<UserContact>

@if (Model != null && Model.Count > 0)
{
    <div class="row">
        <div class="col-sm-12 col-md-2 col-lg-3"></div>
        <div class="col-sm-12 col-md-8 col-lg-6 text-left pb-3">
            @foreach (var item in Model)
            {
                string id = "contactItem_" + item.Id.ToString();
                <div class="form-check text-smaller">
                    <input class="form-check-input gmail-contact-checkbox" type="checkbox" value="" id="@id" data-email="@item.Email">
                    <label class="form-check-label" for="@id">
                        @item.Email
                    </label>
                </div>
            }
        </div>
        <div class="col-sm-12 col-md-2 col-lg-3"></div>
    </div>
    
}
else
{
    <p class="m-0 py-2">No contacts to display.</p>
}

