@{
    Layout = "_WebsiteLayout";
}

<section class="bg-grey-dark-3 py-4">
    <div class="container">
        <div class="row">
            <div class="col-sm-12 col-md-3"></div>
            <div class="col-sm-12 col-md-6">
                <div class="shadow medium-rounded-corners bg-white">
                    <div class="bg-yellow-light py-3 px-3 d-flex flex-row align-items-center">

                        <p class="m-0 MontserratMedium py-2 flex-95">
                            Create a new Password
                        </p>
                        <a asp-action="Index" asp-controller="Home" class="text-dark flex-5 timezoneoffset"><i class="fas fa-times"></i></a>
                    </div>
                    <form class="bg-white px-3 py-3" id="CreateNewPasswordForm">

                        <div class="form-group py-2">
                            <label for="Password" class="text-smaller">Password</label>
                            <input type="password" class="form-control text-small" id="Password" placeholder="Enter your new Password here">
                        </div>
                        <div class="form-group py-2">
                            <label for="RepeatPassword" class="text-smaller">Repeat Password</label>
                            <input type="password" class="form-control text-small" id="RepeatPassword" placeholder="Re-enter your new Password here">
                        </div>
                        <button type="submit" class=" btn btn-warning text-smaller text-white bg-orange-dark border-orange-dark border-bottom-orange-dark-thicker px-4 timezoneoffset">Finish</button>
                        <a asp-action="Index" asp-controller="Home" class="text-grey-2 btn btn-link float-right text-smaller timezoneoffset">Cancel</a>
                    </form>
                </div>
            </div>
            <div class="col-sm-12 col-md-3"></div>
        </div>

    </div>
</section>


<input id="SaveUserNewPasswordURL" hidden value="@Url.Action("SaveUserNewPassword", "Home")" />
<input id="SaveUserNewPasswordRedirectURL" hidden value="@Url.Action("Index", "Home")" />
<input id="UID" hidden value="@ViewData["User"].ToString()" />

@section Scripts{
    <script src="@Url.Content("~/app/Home/CreateNewPassword.js")" asp-append-version="true"></script>
}