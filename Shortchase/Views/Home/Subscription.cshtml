@model WebsiteUserSubscriptionPlanDto
@{
    Layout = "_WebsiteLayoutWithoutJumbotron";
}

<section class="bg-grey-dark-3">
    <div class="container  mt-5">
        <div class="row">
            <div class="col-sm-12 col-md-12 col-lg-12 mt-5">
                <h2 class="section-title pb-5 text-center">
                    Subscriptions
                </h2>
            </div>
        </div>
        <div class="card shadow">
            <div class="card-body px-2 py-3">
                @if (Model.CanSubscribe && Model.SubscriptionPlans.Count > 0)
                {
                    int iterationCount = 0;
                    string DurationTitle = "";
                    if (Model.Plan == SubscriptionPlanType.Boisterous)
                    {
                        DurationTitle = "Duration (Month)";
                    }
                    else
                    {
                        DurationTitle = "Duration";
                    }
                    <h4 class="mb-4">Select a Plan</h4>
                    <table class="table table-striped table-bordered w-100 text-smaller" cellspacing="0">
                        <thead>
                            <tr>
                                <th>Plan</th>
                                <th>Price/Month</th>
                                <th>@DurationTitle</th>
                                <th>Total Price</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var plan in Model.SubscriptionPlans)
                            {
                                iterationCount++;
                                string checkedOption = "";
                                if (iterationCount == 1)
                                {
                                    checkedOption = "checked";
                                }
                                <tr>
                                    <td>
                                        <div class="form-check">
                                            <input class="form-check-input SubscriptionPlanPicker mt-0 d-block d-sm-block d-md-inline d-lg-inline d-xl-inline" type="radio" name="SubscriptionPlanPicker" id="Plan-@plan.Id" value="@plan.Id" @checkedOption>
                                            <label class="form-check-label d-none d-sm-none d-md-none d-lg-inline-block d-xl-inline-block" for="Plan-@plan.Id">
                                                @plan.Name
                                            </label>
                                            <label class="form-check-label d-inline-block d-sm-inline-block d-md-inline-block d-lg-none d-none pl-2" for="Plan-@plan.Id">

                                                @plan.Name
                                            </label>
                                        </div>
                                    </td>
                                    <td>
                                        $ @plan.ValuePerMonth.ToString("0.00")
                                    </td>
                                    <td>
                                        @plan.DurationInMonths
                                    </td>
                                    <td>
                                        $ @plan.TotalValuePerDuration.ToString("0.00")
                                    </td>
                                </tr>

                            }
                        </tbody>
                    </table>
                    <div class="row">
                        <div class="col-sm-12 col-md-12 col-lg-12 ">
                            <div class="h-100 d-flex justify-content-end align-items-center">
                                <a class="btn btn-default text-smaller timezoneoffset" asp-action="Index" asp-controller="Home">Cancel</a> 
                                <span>&nbsp;&nbsp;&nbsp;</span>
                                <button class="btn btn-dark text-smaller timezoneoffset ProceedToConfirmationBtn">Proceed</button>
                            </div>
                            
                        </div>
                    </div>
                }
                else
                {
                    <p class="m-0 text-center">
                        You already have a subscription on this as @Model.Plan.
                        <br />
                        <a asp-action="Index" asp-controller="Home" class="btn btn-dark btn-sm text-smaller timezoneoffset">Back</a>
                    </p>
                }
            </div>
        </div>
    </div>
</section>

<input type="hidden" id="SubscriptionConfirmationUrl" value="@Url.Action("SubscriptionConfirmation", "Home")" />

@section Scripts{
    <script src="@Url.Content("~/app/Home/Subscription.js")" asp-append-version="true"></script>
}