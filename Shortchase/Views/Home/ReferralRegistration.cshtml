@model ReferralRegistrationDto
@{
    Layout = "_WebsiteLayout";
}

<section class="bg-grey-dark-3">
    <div class="container">
        <div class="row">
            <div class="col-sm-12 col-md-12 col-lg-12">
                <h2 class="section-title pb-5 text-center">
                    Create an account
                </h2>
            </div>
        </div>
        <div class="card shadow">
            <div class="card-body">
                <p class="text-center py-4">Fill the form below and click on Register to finish your registration</p>
                <div class="row">
                    <div class="col-sm-12 col-md-1 col-lg-3"></div>
                    <div class="col-sm-12 col-md-10 col-lg-6">
                        <form class="text-center" id="SignUpModalReferral_Form">
                            <div class="form-group">
                                <input type="email" class="form-control text-left" id="SignUpModalReferral_Email" placeholder="Email" required>
                            </div>
                            <div class="form-group">
                                <input type="text" class="form-control text-left" id="SignUpModalReferral_FirstName" placeholder="First Name" required>
                            </div>
                            <div class="form-group">
                                <input type="text" class="form-control text-left" id="SignUpModalReferral_LastName" placeholder="Last Name" required>
                            </div>
                            @*<div class="form-group">
            <input type="date" class="form-control text-left" id="SignUpModalReferral_BirthDate" placeholder="Birth Date" pattern="\d{4}-\d{2}-\d{2}" required>
        </div>*@
                            <div class="row">
                                <div class="col-sm-12 col-md-12 col-lg-3">
                                    <div class="d-flex h-100 justify-content-center justify-content-md-center justify-content-lg-start align-items-center text-muted">
                                        Birth Date
                                    </div>
                                </div>
                                <div class="col-sm-12 col-md-12 col-lg-9">

                                    <div class="form-group  mb-2">
                                        <input type="text" class="form-control  date-masked-input-2 text-center" id="SignUpModalReferral_BirthDate" placeholder="MM/DD/YYYY" required>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <input type="password" class="form-control text-left" id="SignUpModalReferral_Password" placeholder="Password" required>
                            </div>
                            <div class="form-group">
                                <input type="password" class="form-control text-left" id="SignUpModalReferral_RepeatPassword" placeholder="Repeat Password" required>
                            </div>
                            <p class="text-center">
                                How do you want to verify your account?
                            </p>
                            <input type="hidden" value="email" id="SignUpModalReferral_VerificationType" />
                            <div class="text-center">
                                <div class="container d-none d-sm-none d-md-none d-lg-block">
                                    <div class="row">
                                        <div class="col-sm-12 col-md-12 col-lg-6 text-right">
                                            <input class="form-check-input verification-selector-email-referral" type="radio" name="Verification" id="SignUpModalReferral_ValidateEmail" value="option1" checked>
                                            <label class="form-check-label verification-selector-email-referral" for="SignUpModalReferral_ValidateEmail">
                                                Email
                                            </label>
                                        </div>
                                        <div class="col-sm-12 col-md-12 col-lg-6 text-left">
                                            <input class="form-check-input verification-selector-text-referral" type="radio" name="Verification" id="SignUpModalReferral_ValidateText" value="option1">
                                            <label class="form-check-label verification-selector-text-referral" for="SignUpModalReferral_ValidateText">
                                                Text
                                            </label>
                                        </div>
                                    </div>
                                </div>
                                <div class="container d-block d-sm-block d-md-block d-lg-none">
                                    <div class="row">
                                        <div class="col-6 text-right pr-4">
                                            <input class="form-check-input verification-selector-email-referral" type="radio" name="VerificationResponsive" id="SignUpModalReferral_ValidateEmail2" value="option1" checked>
                                            <label class="form-check-label verification-selector-email-referral pl-2" for="SignUpModalReferral_ValidateEmail2">
                                                Email
                                            </label>
                                        </div>
                                        <div class="col-6 text-left pl-4">
                                            <input class="form-check-input verification-selector-text-referral" type="radio" name="VerificationResponsive" id="SignUpModalReferral_ValidateText2" value="option1">
                                            <label class="form-check-label verification-selector-text-referral pl-2" for="SignUpModalReferral_ValidateText2">
                                                Text
                                            </label>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div id="SignUpModalReferral_PhoneInfo" style="display: none; max-width: 50%; margin: 0 auto;">
                                <div>
                                    <select class="countryPhoneSelector general-form-select border-bottom-grey-pruple" data-display="SignUpModalReferral_countryCode" id="SignUpModalReferral_PhoneCountry" name="SignUpModalReferral_PhoneCountry">
                                        @{
                                            string defaultCode = "";
                                            foreach (var item in Model.CountryOptions)
                                            {
                                                if (item.IsDefault)
                                                {
                                                    defaultCode = item.Code;
                                                    <option value="@item.Id" name="@item.Code" selected>@item.Name</option>
                                                }
                                                else
                                                {
                                                    <option value="@item.Id" name="@item.Code">@item.Name</option>
                                                }

                                            }
                                        }

                                    </select>
                                </div>
                                <div class="phoneInputWrapper">
                                    <span class="codeWrapper border-bottom-grey-pruple">+ <span id="SignUpModalReferral_countryCode">@defaultCode</span></span>
                                    <input type="text" class="general-form-input border-bottom-grey-pruple" id="SignUpModalReferral_Phone" placeholder="Phone Number" value="">
                                </div>

                            </div>

                            <div class="pt-3">

                                <input type="hidden" value="0" id="SignUpModalReferral_Boisterous" />
                                <input type="hidden" value="0" id="SignUpModalReferral_ShortchasePro" />
                                <input type="hidden" value="@Model.Email" id="SignUpModalReferral_ReferredByEmail" />
                                <button type="submit" class="btn btn-dark btn-lg MontserratBold text-small py-3" id="SubmitSignUpModalReferral_Form">
                                    Register
                                </button>
                            </div>

                        </form>
                    </div>
                    <div class="col-sm-12 col-md-1 col-lg-3"></div>
                </div>
                
            </div>
        </div>
    </div>
</section>

<input type="hidden" id="RegisterReferredUserUrl" value="@Url.Action("RegisterReferredUser", "Account")" />
<input type="hidden" id="RedirectUrl" value="@Url.Action("Index", "Home")" />

@section Scripts{
    <script src="@Url.Content("~/app/Home/ReferralRegistration.js")" asp-append-version="true"></script>
}